{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "declaration": true,
        "declarationMap": false,
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}